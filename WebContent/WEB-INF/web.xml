<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
	<!--  General Web Application Description -->
	<display-name>eCommerce Application</display-name>

	
 	 <welcome-file-list>
 	     <welcome-file>
 	        products
 	     </welcome-file>
 	</welcome-file-list>
 	
	<description>
		Web Application made in UCSD's Spring 2014 CSE 135 class.
 	</description>
 	
 	<servlet>
 		<servlet-name>login</servlet-name>
 		<servlet-class>cse135.servlet.LoginServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 		<servlet-name>login</servlet-name>
 		<url-pattern>/login</url-pattern>
 	</servlet-mapping>
 	
 	<servlet>
 		<servlet-name>signup</servlet-name>
 		<servlet-class>cse135.servlet.SignupServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 		<servlet-name>signup</servlet-name>
 		<url-pattern>/signup</url-pattern>
 	</servlet-mapping>
 	
    <servlet>
 		<servlet-name>categories</servlet-name>
 		<servlet-class>cse135.servlet.CategoryServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 		<servlet-name>categories</servlet-name>
 		<url-pattern>/categories</url-pattern>
 	</servlet-mapping>
 	
 	<servlet>
 		<servlet-name>products</servlet-name>
 		<servlet-class>cse135.servlet.ProductServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 		<servlet-name>products</servlet-name>
 		<url-pattern>/products</url-pattern>
 	</servlet-mapping>
 	
	<servlet>
 		<servlet-name>buy</servlet-name>
 		<servlet-class>cse135.servlet.OrderServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 		<servlet-name>buy</servlet-name>
 		<url-pattern>/order</url-pattern>
 	</servlet-mapping>
 	
	<servlet>
		<servlet-name>multiplier</servlet-name>
		<jsp-file>/multiplyJSP.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>multiplier</servlet-name>
		<url-pattern>/multiply</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>student</servlet-name>
		<jsp-file>/students.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>student</servlet-name>
		<url-pattern>/students</url-pattern>
	</servlet-mapping>

</web-app>
